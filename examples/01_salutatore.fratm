// Example 1: Neapolitan Greeter
// The classic Hello World, but with flair
// ============================================

chist è messaggio = "Uè, comme staje?"

facc saluta(nome) {
    si (nome == nisciun) {
        piglie "E chi si tu?"
    }
    piglie messaggio + " " + nome + "!"
}

// Let's greet some people
stamm a dì(saluta("Gennaro"))
stamm a dì(saluta("Ciro"))
stamm a dì(saluta("Totò"))
stamm a dì(saluta(nisciun))
